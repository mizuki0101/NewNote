<div class="like-link float-right m-1 text-danger" id="like-link-<%= note.id %>">
  <% if current_user.likes.find_by(note_id: note.id) %>
    <%= link_to unlike_path(note.id), method: :delete, remote: true do %>
        <div class = "iine__button text-danger">❤️<%= note.likes.count %></div>
    <% end %>
  <% else %>
    <%= link_to like_path(note.id), method: :post, remote: true do %>
        <div class = "iine__button text-danger">♡️<%= note.likes.count %></div>
    <% end %>
  <% end %>
</div>
